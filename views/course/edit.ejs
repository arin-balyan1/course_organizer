<%- include('../partials/header') %>

<div class="container mt-5">
    <div class="card shadow-lg">
        <div class="card-header bg-warning text-dark">
            <h3 class="mb-0">Edit Course</h3>
        </div>
        <div class="card-body">
            <form action="/courses/<%= course[0].course_id %>" method="post">
                <div class="mb-3">
                    <label for="course_id" class="form-label">Course ID</label>
                    <input type="text" class="form-control" name="course_id" value="<%= course[0].course_id %>" readonly>
                </div>

                <div class="mb-3">
                    <label for="course_name" class="form-label">Course Name</label>
                    <input type="text" class="form-control" name="course_name" value="<%= course[0].course_name %>">
                </div>

                <div class="mb-3">
                    <label for="credits" class="form-label">Credits</label>
                    <input type="text" class="form-control" name="credits" value="<%= course[0].credits %>">
                </div>

                <div class="mb-3">
                    <label for="branch" class="form-label">Branch</label>
                    <input type="text" class="form-control" name="branch" value="<%= course[0].branch %>">
                </div>

                <button type="submit" class="btn btn-primary w-100">Submit</button>
            </form>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>
