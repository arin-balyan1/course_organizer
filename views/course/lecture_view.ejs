<%- include('../partials/header') %>

<h1><%= course.course_name %></h1>
<p>Credits: <%= course.credits %> | Branch: <%= course.branch %></p>

<h2>Lecture Details</h2>
<p><strong>Title:</strong> <%= lecture.title %></p>
<p><strong>Description:</strong> <%= lecture.description %></p>

<% if (lecture.pdf_url) { %>
  <p><strong>PDF:</strong> <a href="<%= lecture.pdf_url %>" target="_blank">Download PDF</a></p>
<% } %>

<hr>

<h2>Assignments</h2>
<a href="/courses/<%= course.course_id %>/assignments">View Course Assignments</a>

<a href="/courses/<%= course.course_id %>">Back to Course</a>

<%- include('../partials/footer') %>
